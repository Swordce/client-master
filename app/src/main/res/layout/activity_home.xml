<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:src="@mipmap/ic_title"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="管理端"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="44dp"
            android:gravity="center">


            <LinearLayout
                android:id="@+id/ll_qrcode_enter"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:background="@mipmap/bg_ewmrc"
                android:layout_marginEnd="3dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="二维码进场"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_finger_enter"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:background="@mipmap/bg_zwrc"
                android:layout_marginStart="3dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="指纹入场"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">


            <LinearLayout
                android:id="@+id/ll_qrcode_walkedout"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:background="@mipmap/bg_ewmcc"
                android:layout_marginEnd="3dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="二维码出场"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_finger_walkedout"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:background="@mipmap/bg_zwcc"
                android:layout_marginStart="3dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="指纹出场"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_id_collect"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@mipmap/bg_cjxx"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="68dp"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:text="信息采集"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_finger_reset"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@mipmap/bg_zwcj"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="68dp"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:text="指纹补采"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_data_statics"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@mipmap/bg_cjxx"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="68dp"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:text="数据统计"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
